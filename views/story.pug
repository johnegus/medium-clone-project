extends layout.pug
include ./utilities/mixin_navbar.pug

block content
  +navbar('main')
  #story
    #story__body
      #story__header
        h1= story.title
      if story.subtitle
        #story__subtitle
          h1= story.subtitle
      else
        div#story__subtitle
      #story__userDiv
        div(class="userInfo")
          div(class="userPic")
            img(src=user.picUrl)
          div(class="userInfo__left")
            div(class="fullNameDiv")
              p=user.fullName
            div(class="followBtnDiv")
              button(type="button" class="followBtn") Follow
          div(class="date")
            p=date
        div(class="social-list")
          a(class="social-list__link")
            i(class="fab fa-twitter-square")
          a(class="social-list__link" href=user.linkedinUrl)
            i(class="fab fa-linkedin" id="social-list__link")
          a(class="social-list__link")
            i(class="fab fa-facebook-square")
          a(class="social-list__link" href=user.githubUrl)
            i(class="fab fa-github-square")
      #story__contents
        p= story.body
      footer#splash__footer
