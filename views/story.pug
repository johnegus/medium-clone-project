extends layout.pug
include ./utilities/mixin_navbar.pug

block content
  +navbar('main')
  #story
    #story__body
      #story__header
        h1= story.title
      if story.subtitle
        #story__subtitle
          h1= story.subtitle
      else
        div#story__subtitle
      #story__userDiv
        div(class="userInfo")
          div(class="userPic")
            img(src=user.picUrl)
          div(class="userInfo__left")
            div(class="fullNameDiv")
              p=user.fullName
            div(class="followBtnDiv")
              button(type="button" class="followBtn") Follow
          div(class="date")
            p=date + "Â·" + readTime
        div(class="social-list")
          include ./utilities/social_list.pug
          div(class="menu")
            a(class="social-list__link ellipsis")
              i(class="fas fa-ellipsis-h", id="social-list__link")
            #story__menu
              ul(class="storyMenu__list")
                li(class="storyMenu__listItem editStoryBtn")
                  h4 Edit this story
                li(class="storyMenu__listItem deleteStoryBtn")
                  h4 Delete this story
      #story__contents
        p= story.body
      footer#splash__footer
  script(type="module" src="/js/story.js")
  script(type="module" src="/js/deleteStory.js")
