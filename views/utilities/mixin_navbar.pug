mixin navbar(pageName, img)
  nav.shadow#navbar
    #navbar__contents
      .left-contents
       a(href="/"): h1 Readium
       p.greeting
      if pageName == 'splash'
        div(class="right-contents")
          div(class="splash__contents-login")
            button(class="splash-login navbar") Sign in
          div(class="navbar__contents__signup")
            button(class="splash__contents-signup") Get started
      else if pageName == 'main'
        img(id="navbar__prof-icon" src="")
        #navbar__modal.hidden

          .modal__header
            img(class="modal__prof-pic" src="")
            .modal__member-info
              .modal__member-info-name: a(href="") Cole McCoy
              .modal__member-info-username: a(href="") @cmccoy
          .modal__contents
            ul
              li: a(class="nav-new-story-link" href="") New Story
              li: a(class="nav-user-stories" href="") Stories
              li: a(class="nav-profile-link" href="") Profile
              li: a(class="" href="") Sign out
        script.
          const nav = document.getElementById('navbar');
          nav.classList.remove('shadow');
 
          const greetingContainer = document.querySelector('.greeting');
          const currentTime = new Date().getHours();

          if (currentTime < 12) greetingContainer.innerHTML = 'Good morning';
          else if (currentTime < 18) greetingContainer.innerHTML = 'Good afternoon';
          else greetingContainer.innerHTML = 'Good evening';

      else if pageName == 'storyForm'
        #right-contents
          #navbar__prof-icon
          //- a(class="navbarIcon storyForm-bell")
          //-   i(class="navbarIcon far fa-bell")
          //- a(class="navbarIcon storyForm-ellipsis")
          //-   i(class="navbarIcon fal fa-plus-circle")
          button(class="navbarIcon publishBtn") Publish
          #navbar__modal.hidden
            .modal__header
              .modal__prof-pic
              .modal__member-info Member<br>User's name<br>username
            .modal__contents
              ul
                li: a(class="nav-new-story-link" href="") New Story
                li: a(class="nav-user-stories" href="") Stories
                li: a(class="" href="") Reading List
                li: a(class="nav-profile-link" href="") Profile
                li: a(class="" href="") Sign out
      else
        p stuff here