extends layout.pug
include ./utilities/mixin_navbar.pug

block content
  +navbar('main')
  #main
    #main__articles #main_articles
    #main__from-following #main__from-following
    #main__trends #main__trends
    main#main__feeds main(#main__feeds)
    aside
      #main__sidebar
        #main__readinglist #main__readinglist
        footer#main__footer footer(#main__footer)
  script.
    const profIcon = document.getElementById('main__prof-icon');
    const modal = document.getElementById('main__prof-icon--expanded');
    profIcon.addEventListener('click', e => {
      modal.classList.toggle('visible');
      modal.classList.toggle('hidden');
    });